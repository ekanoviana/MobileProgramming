<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorProfile"
    android:orientation="vertical"
    tools:context=".ProfilActivity">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/colorPink"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/cardview_light_background"
                android:layout_marginTop="10dp"></LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilq"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/hello"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/colorBlue"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/cardview_light_background"
                android:layout_marginTop="10dp"></LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:layout_marginHorizontal="40dp"
            app:cardBackgroundColor="@color/colorLightBlue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginTop="16dp">
                <TextView
                    android:background="@drawable/profil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eka Novi Ana Nur Anisa"
                    android:textColor="#fff"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:padding="10dp"/>
                <TextView
                    android:background="@drawable/profil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ekanoviana100@gmail.com"
                    android:textColor="#fff"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>